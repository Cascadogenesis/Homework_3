//Реализовать метод, который принимает в качестве аргумента int size
// и печатает в консоль квадрат из символов * со сторонами соответствующей длины;
package work3;

import java.util.Scanner;

public class class2 {

    public static void kvadrat(int size) {
        for (int i = 0; i < size; i++) {
            for (int j = 0; j < size; j++) {
                System.out.print("* ");
            }
            System.out.println();
        }
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Какой квадратик?  : ");
        int size = scanner.nextInt();

        kvadrat(size);
    }
}
